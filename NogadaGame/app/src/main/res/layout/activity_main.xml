<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.example.minjae.nogadagame.MainActivity">

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/stress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/popularity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right" />
    </LinearLayout>
    <ImageView
        android:id="@+id/sim"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        >
        <Button
            android:id="@+id/changeProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로필 사진 바꾸기 (1만 활동지수)"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/uploadVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동영상 업로드 (5만 활동지수)"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/timeLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="타임라인 방문 (50만 활동지수)"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/loving"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연애중 띄우기 (100만 활동지수)"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
